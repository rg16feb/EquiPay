<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY TRANSACTION"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/cash_currency"/>

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/date_of_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="23 JAN 2022"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cash_currency"
                android:padding="10dp"
                android:text="Payee"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/payingFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cash_currency"
                android:padding="10dp"
                android:text="Paying for Members: 5"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/AmountPaidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:layout_gravity=""
            android:text="Amount:"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/amountPaidValue"
            android:text="3000"
            android:layout_width="wrap_content"
            android:textColor="@color/yellow"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:layout_gravity="right"
            android:paddingEnd="10dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>